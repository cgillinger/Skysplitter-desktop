{
  "name": "skysplitter-desktop",
  "version": "1.0.1",
  "description": "Split and post long text to Bluesky - Desktop Edition",
  "main": "main.js",
  "author": "Christian Gillinger",
  "license": "MIT",
  "keywords": [
    "bluesky",
    "social-media",
    "desktop-app",
    "electron",
    "text-processing",
    "thread-creator",
    "post-splitter",
    "social-network",
    "bsky",
    "atproto",
    "cross-platform",
    "threaded-posts",
    "text-splitting",
    "portable-app"
  ],
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.skysplitter.desktop",
    "productName": "Skysplitter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/.{idea,git,githubusercontent,vs}",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes,.editorconfig,.flowconfig,.yarn-metadata.json,.*.yml,*.yaml}"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/bluesky.ico",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "portable": {
      "splashImage": "assets/bluesky.ico"
    }
  },
  "dependencies": {
    "@atproto/api": "latest",
    "express": "^4.18.2",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}